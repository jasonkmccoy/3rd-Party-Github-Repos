@import "../styl/css3"

div
    display-box()

    box-orient(vertical)

    box-pack(center)

    box-align(center)

    box-flex(2)

    box-sizing(border-box)

    user-select(all)

    appearance(button)

    border-radius(10%)
    border-radius(10% 20%)
    border-radius(2px 4px 6px 8px)

    box-shadow(black 0px 2px 4px)
    box-shadow(black 0px 2px 4px 8px)
    box-shadow(black 0px 2px 4px 8px inset)

    text-shadow(rgba(132, 188, 222, 0.5) 0px 2px 4px)
    text-shadow(black 0px 2px 4px 8px)
    text-shadow(black 0px 2px 4px 8px inset)

    linear-gradient(unquote("top, crimson 0%, black 100%"))

    radial-gradient(unquote("50% 50%, circle, crimson 0%, black 100%"))

    transform(unquote("matrix(1, 0, 0, 1, 0, 0)"))

    transform-origin(50% 50%)

    transform-style(flat)

    perspective(1000px)

    perspective-origin(50% 0%)

    backface-visibility(visible)

    matrix(unquote("0, 1, 2, 3, 4, 5"))

    translate(unquote("0, 100%"))

    scale(unquote("0.5, 2"))

    rotate(45deg)

    skew(unquote("45deg, 45deg"))

    transition(all 1s easeInOutExpo 500ms)

    animation(walk 1s easeInOutExpo 500ms infinite reverse forwards)